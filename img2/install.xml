<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.7" method="upgrade">
	<name>COM_WIZARD</name>
	<creationDate>2017-07-23</creationDate>
	<author>Vvairuss</author>
	<authorEmail>vvairuss@mail.ru</authorEmail>
	<authorUrl>https://vk.com/vvairuss</authorUrl>
	<copyright>Copyright Info</copyright>
	<version>1.0.0</version>
	<description>COM_WIZARD_DESCRIPTION</description>
	
		<files folder="site">
			<folder>language</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>css</folder>
			<folder>wizard</folder>
			<filename>controller.php</filename>
			<filename>wizard.php</filename>
			<filename>index.html</filename>
		</files>
	
		<administration>
			<menu link="index.php?option=com_wizard" img="components/com_wizard/assets/images/lendr_icon.png">COM_WIZARD</menu>
				<submenu>
					<menu view="brand" img="components/com_lendr/assets/images/settings_icon.png" alt="LENDR/Settings">COM_WIZARD_MENU_BRANDS</menu>
					<menu view="car" img="components/com_lendr/assets/images/settings_icon.png" alt="LENDR/Settings">COM_WIZARD_MENU_CARS</menu>
					<menu view="variant" img="components/com_lendr/assets/images/settings_icon.png" alt="LENDR/Settings">COM_WIZARD_MENU_WIZARD</menu>
					<menu view="device" img="components/com_lendr/assets/images/settings_icon.png" alt="LENDR/Settings">COM_WIZARD_MENU_DEVICE</menu>
					<menu view="detail" img="components/com_lendr/assets/images/settings_icon.png" alt="LENDR/Settings">COM_WIZARD_MENU_DETAILS</menu>
				</submenu>
			
		<files folder="admin">
			<folder>controllers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>tables</folder>
			<folder>sql</folder>
			<filename>controller.php</filename>
			<filename>wizard.php</filename>
			<filename>index.html</filename>
		</files> 
		
		<languages folder="admin">
			<language tag="en-GB">language/ru-RU/ru-RU.com_wizard.ini</language>
			<language tag="en-GB">language/ru-RU/ru-RU.com_wizard.sys.ini</language>
		</languages>
		
		</administration>
		
				
		<languages folder="site/language">
			<language tag="ru-RU">ru-RU/ru-RU.com_wizard.ini</language>
		</languages>
		
		<install>
			<sql>
				<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
			</sql>
		</install>
		
		<uninstall>
			<sql>
				<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
			</sql>
		</uninstall>
		
</extension>